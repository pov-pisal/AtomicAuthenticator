{
  "manifest_version": 3,
  "name": "Atomic Authenticator",
  "version": "1.0.0",
  "description": "Secure TOTP generator with encrypted vault.",
  "action": {
    "default_title": "Atomic Authenticator",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/qr-code-128px.png"
    }
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/qr-code-128px.png"
  }
}
